{
  "name": "tailwindcss-mangle",
  "version": "1.2.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm run -r build",
    "build:pkg": "pnpm run -r --filter=./packages/* build",
    "build:app": "pnpm run -r --filter=./apps/* build ",
    "dev": "pnpm -r --parallel run dev",
    "dev:pkg": "pnpm -r --filter=./packages/* --parallel run dev",
    "test": "pnpm run -r --filter=./packages/* test ",
    "lint": "pnpm run -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "preinstall": "npx only-allow pnpm",
    "release": "bumpp -r",
    "sync": "cnpm sync tailwindcss-mangle-shared tailwindcss-patch unplugin-tailwindcss-mangle tailwindcss-mangle-core"
  },
  "devDependencies": {
    "@icebreakers/eslint-config-ts": "^1.0.4",
    "@icebreakers/rollup": "^0.4.0",
    "@icebreakers/tsconfig": "^0.0.6",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.3",
    "bumpp": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "only-allow": "^1.1.1",
    "prettier": "^2.8.8",
    "rollup": "^3.21.6",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.14.1"
}
